pipeline {
    agent any

    stages {
        stage('Install') {
            steps {
                dir('frontend') {
                    bat 'npm install'
                }
            }
        }

        stage('Test') {
            steps {
                dir('frontend') {
                    bat 'npm test -- --passWithNoTests'
                }
            }
        }

        stage('Build') {
            steps {
                dir('frontend') {
                    // Disable CI warnings-as-errors in Jenkins
                    bat '''
                        set "CI="
                        npm run build
                    '''
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished!'
        }
        success {
            echo 'Build successful, archiving artifacts...'
            archiveArtifacts artifacts: 'frontend/build/**', fingerprint: true
        }
        failure {
            echo 'Build failed!'
        }
    }
}
