pipeline {
    agent any
    tools {
        nodejs "NodeJS"   // Matches the name you gave in Global Tool Config
    }
    stages {
        stage('Install') {
            steps {
                sh 'npm install'
            }
        }
        stage('Test') {
            steps {
                sh 'npm test'
            }
        }
        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }
    }
}
